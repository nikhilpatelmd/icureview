---
layout: base
---

<div>
  <h1 class="gradient-text">{{ title }}</h1>
  <ul class>
    {% for item in tags | filterTagList %}
      <a href="/tag/{{ item | slug }}">{{ item }}</a>
    {% endfor %}
  </ul>
  {% set definedDate = datePublished %}
  <ul>
    <li>
      <strong>Published</strong>: {% include "partials/date.njk" %}</li>
    <li>
      <strong>Journal</strong>: {{ journal }}
    </li>
    <li>
      <strong>PMID</strong>
      <span>:  </span>
      <a href="https://pubmed.ncbi.nlm.nih.gov/{{ pmid }}">{{ pmid }}</a>
    </li>
    <li>
      <strong>Trial Registration</strong>: <a href="{{ nctLink }}">{{ nctID }}</a>
    </li>
  </ul>
</div>

<article class="region blog">
  <div class="wrapper flow prose">
    {{ content | safe }}
  </div>
</article>

<!-- include blogpost schema  -->
{%- include "schemas/blogpost-schema.njk" %}