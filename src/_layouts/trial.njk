---
layout: base
---

<article
id="{{ title | slugify }}" 
class="region blog | h-entry"
style="--region-space-top: var(--space-4xl)"
  >
  <div class="wrapper flow content">
    <h1 class="gradient-text | p-name">{{ title }}</h1>
    <ul>
      {% for item in tags | filterTagList %}
        <li class="tagButton">
          <a href="/tag/{{ item | slug }}">{{ item }}</a>
        </li>
      {% endfor %}
    </ul>
    <dl class="meta">
      <!-- date -->
      {% set definedDate = datePublished %}
      <dt>
        Published:
      </dt>
      <dd>{% include "partials/date.njk" %}</dd>
      <dt>
        Journal:
      </dt>
      <dd>{{ journal }}</dd>
      <dt>
        PMID:
      </dt>
      <dd>
        <a href="https://pubmed.ncbi.nlm.nih.gov/{{ pmid }}" target="_blank" rel="noopener noreferrer">{{ pmid }}</a>
      </dd>
      <dt>
        DOI:
      </dt>
      <dd>
        <a href="https://doi.org/{{ doi }}" target="_blank" rel="noopener noreferrer">{{ doi }}</a>
      </dd>
      <dt>
        Reading time:
      </dt>
      <dd>{{ helpers.getReadingTime(content) }} minutes
        </dd>
    </dl>
    <div class="flow e-content">
      <div class="flow gist">{{ gist | md | safe }}</div>
      {% include "partials/toc.njk" %}
      {{ content | safe }}
    </div>
  </div>

</article>

<!-- include blogpost schema  -->
{%- include "schemas/blogpost-schema.njk" %}