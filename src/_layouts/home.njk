---
layout: base
---

<header class="section spot-color-primary">
  <div class="section__inner region">
    <div class="wrapper flow">
      <h2 class=>{{ meta.siteDescription }}</h2>
      <div class="trial summaries">
        <p>Latest Trial Summaries</p>
        <ul>

          {% set postslist = collections.trials %}
          {% for post in postslist.slice(0, 4) %}

            <li>
              <h3>
                <a href="{{ post.url | url }}">{{ post.data.title }}</a>
              </h3>
              {% set definedDate = post.date %}
              {% include "partials/date.njk" %}
              <p>{{ post.data.description }}</p>
              {# <ul>
                {% set postslist = collections.tag %}
                {% for post in collections.tag %}
                  <li>{{ title }}</li>
                </ul> #}
            </li>
          {% endfor %}
        </ul>
    </ul>
  </div>
</div>

</div>
{% include 'svg/divider-edgy.svg' %}
</header>

<article class="region" style="--region-space-top: var(--space-s)"></article>